# API Settings
PROJECT_NAME='Multi Agent Movie Intelligence System '
API_BASE_PREFIX=/api
ENVIRONMENT=development

# CORS (Frontend URLs)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:3001

# Firebase Admin SDK
# Service account JSON from Firebase Console
# Project Settings > Service Accounts > Generate New Private Key
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Firebase Storage
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-...your-key-here

# use GPT-4o: Text-to-SQL Prompt Generator | Rag Prompt Generator | Template Parser
OPENAI_MODEL_NAME=gpt-4o

OPENAI_BASE_URL=https://api.openai.com/v1

# Agent-Specific Models (Optional)
# Leave empty to use OPENAI_MODEL_NAME for all agents
# Fallback chain: AGENT_SPECIFIC → OPENAI_MODEL_NAME → gpt-4o
ORCHESTRATOR_MODEL_NAME=gpt-5.2
TEXT_TO_SQL_MODEL_NAME=gpt-5.2
RAG_MODEL_NAME=gpt-4o
RESEARCH_MODEL_NAME=gpt-5-mini


# Google Custom Search API
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=movieapp
